{
  "manifest_version": 3,
  "name": "VK Covers - Анимированные обложки для ВКонтакте",
  "version": "0.1.0",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },
  "action": {
    "default_title": " ",
    "default_icon": "icon48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.vk.com/*"
      ],
      "js": [
        "dist/content.b60ea27a.js"
      ]
    }
  ],
  "background": {
    "service_worker": "dist/background.f0f12a5f.js"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/content.b60ea27a.js",
        "dist/popup.ba0889f8.js",
        "dist/background.f0f12a5f.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {}
}